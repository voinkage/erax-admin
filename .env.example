# ERAX Admin – Üye yönetimi backend
PORT=3010
DEFAULT_PORT=3010

# JWT (eradil-kullanici ile aynı secret kullanılmalı – token doğrulama için)
JWT_SECRET=your_jwt_secret_here

# Veritabanları (kullanici + organizasyon + icerik)
KULLANICI_DB_URL=postgresql://user:pass@host:5432/kullanici_db
ORGANIZASYON_DB_URL=postgresql://user:pass@host:5432/organizasyon_db
# Etkinlik Sihirbazı (etkinlikler + sorular) + medya referansları
# ICERIK_DB_URL=postgresql://user:pass@host:5432/icerik_db
# Etkinlik silme: öğrenci cevap kayıtları (soru_cevaplari, ogrenci_etkinlik_cevaplari)
# SEVIYE_DB_URL=postgresql://user:pass@host:5432/seviye_db
# Ünite Sihirbazı (kitaplar, kitap_sorulari)
# DIGIBUCH_DB_URL=postgresql://user:pass@host:5432/digibuch_db

# CORS (frontend origin)
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com
CORS_CREDENTIALS=true

# Dosya yükleme (BunnyCDN veya upload.php)
USE_BUNNYCDN=false
# BunnyCDN:
# BUNNYCDN_STORAGE_ZONE=your-zone
# BUNNYCDN_ACCESS_KEY=your-key
# BUNNYCDN_PULL_ZONE=https://your-zone.b-cdn.net
# Eski sistem:
UPLOAD_URL=https://www.eradil.online/api/upload.php
UPLOAD_SECRET=your_upload_secret

# Opsiyonel
# RATE_LIMIT=200
# RATE_LIMIT_WINDOW_MS=60000
# BODY_SIZE_LIMIT=10mb
